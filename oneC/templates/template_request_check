Функция ПроверитьПараметры_{{.HandlerName}}(Запрос)
    {{- if .RequiredBodyParams }}
    Перем {{ join .RequiredBodyParams ", " }};
    {{- end }}

	Попытка
        {{- if .BodyParams }}
        ДанныеЗапроса = JSON_ВЗначение(Запрос.ПолучитьТелоКакСтроку());
		Если ТипЗнч(ДанныеЗапроса) = Тип("Структура") Тогда
		    {{- range .RequiredBodyParams}}
            Если Не ДанныеЗапроса.Свойство("{{.}}", {{.}}) ИЛИ Не ЗначениеЗаполнено({{.}}) Тогда
                ЗаписьЖурналаРегистрации("http сервис ""{{$.ServiceName}}""", УровеньЖурналаРегистрации.Ошибка,,, "Поле ""{{.}}"" должно быть заполнено");
                Возврат Ложь;
            КонецЕсли;
			{{- end}}
		Иначе
			ЗаписьЖурналаРегистрации("http сервис ""{{.ServiceName}}""", УровеньЖурналаРегистрации.Ошибка,,, "Не корректный формат тела запроса");
			Возврат Ложь;
		КонецЕсли;
		{{- end }}

        {{- range .RequiredQueryParamsParams}}
        Если Не ЗначениеЗаполнено(Запрос.ПараметрыЗапроса.Получить("{{.}}")) Тогда
            ЗаписьЖурналаРегистрации("http сервис ""{{$.ServiceName}}""", УровеньЖурналаРегистрации.Ошибка,,, "Параметр запроса ""{{.}}"" должен быть заполнен");
            Возврат Ложь;
        КонецЕсли;
        {{- end}}
	Исключение
		ЗаписьЖурналаРегистрации("http сервис ""{{.ServiceName}}""", УровеньЖурналаРегистрации.Ошибка,,, ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
		Возврат Ложь;
	КонецПопытки;

	Возврат Истина;
КонецФункции

